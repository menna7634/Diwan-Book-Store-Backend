meta {
  name: refresh
  type: http
  seq: 4
}

post {
  url: {{base_url}}/auth/refresh
  body: json
  auth: inherit
}

body:json {
  {
    "refresh_token": "{{refresh_token}}"
  }
}

script:post-response {
  bru.setEnvVar("refresh_token", res.body.refresh_token)
}

settings {
  encodeUrl: true
  timeout: 0
}
